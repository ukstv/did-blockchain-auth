{
  "compilerOptions": {
    "sourceRoot": "./src/",
    "outDir": "./lib/",
    "module": "CommonJS",
    "target": "ES2017",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["types/", "node_modules/@types/"]
  },
  "exclude": ["**/*.test.ts", "**/__tests__/*", "lib/"]
}
